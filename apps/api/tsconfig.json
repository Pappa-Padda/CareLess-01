{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@repo/database": ["../../packages/database/src/index.ts"],
      "@repo/types": ["../../packages/types/src/index.ts"]
    }
  },
  "include": ["src/**/*"]
  ,
  "references": [
    { "path": "../../packages/database" }
  ]
}